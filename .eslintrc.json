{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
		"no-console": ["warn", { "allow": ["warn", "error"] }],
		"prefer-const": "warn",
		"no-var": "error",
		"prefer-arrow-callback": "warn",
		"arrow-spacing": "warn",
		"no-trailing-spaces": "warn",
		"eol-last": "warn"
	},
	"globals": {
		"wp": "readonly",
		"wpcore": "readonly",
		"jQuery": "readonly"
	},
	"ignorePatterns": [
		"node_modules/",
		"assets/dist/",
		"*.min.js"
	]
}

